<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CL_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="0.00"
    android:theme="@style/Theme.GPA_canasb1_Calculator"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/grade5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="34dp"
            android:autofillHints="0.00"
            android:ems="5"
            android:hint="@string/gpa_hint"
            android:inputType="numberDecimal"
            android:keyboardNavigationCluster="false"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/g5_label"
            app:layout_constraintTop_toBottomOf="@+id/grade4" />

        <EditText
            android:id="@+id/grade4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="34dp"
            android:autofillHints="0.00"
            android:ems="5"
            android:hint="@string/gpa_hint"
            android:inputType="numberDecimal"
            android:keyboardNavigationCluster="false"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/g4_label"
            app:layout_constraintTop_toBottomOf="@+id/grade3" />

        <EditText
            android:id="@+id/grade3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="34dp"
            android:autofillHints="0.00"
            android:ems="5"
            android:hint="@string/gpa_hint"
            android:inputType="numberDecimal"
            android:keyboardNavigationCluster="false"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/g3_label"
            app:layout_constraintTop_toBottomOf="@+id/grade2" />

        <EditText
            android:id="@+id/grade2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="34dp"
            android:autofillHints="0.00"
            android:ems="5"
            android:hint="@string/gpa_hint"
            android:inputType="numberDecimal"
            android:keyboardNavigationCluster="false"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/g2_label"
            app:layout_constraintTop_toBottomOf="@+id/grade1" />

        <TextView
            android:id="@+id/g1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="@string/g_label_1"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CL_banner" />

        <TextView
            android:id="@+id/g4_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/g_label_4"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/g3_label" />

        <TextView
            android:id="@+id/g3_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/g_label_3"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/g2_label" />

        <TextView
            android:id="@+id/g2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/g_label_2"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/g1_label" />

        <EditText
            android:id="@+id/grade1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="36dp"
            android:autofillHints="0.00"
            android:ems="5"
            android:hint="@string/gpa_hint"
            android:inputType="numberDecimal"
            android:keyboardNavigationCluster="false"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/g1_label"
            app:layout_constraintTop_toBottomOf="@+id/CL_banner" />

        <TextView
            android:id="@+id/g5_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/g_label_5"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/g4_label" />

        <Button
            android:id="@+id/btnEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:onClick="event"
            android:text="@string/btn_calculate"
            app:layout_constraintBottom_toTopOf="@+id/result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grade5" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="24dp"
            android:text="@string/result"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnEvent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CL_banner"
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:theme="@style/Theme.GPA_canasb1_Calculator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="145dp"
                android:layout_height="92dp"
                android:layout_marginStart="112dp"
                android:layout_marginEnd="134dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/msu_hawk_cropped" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>